<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<!-- mapper 为根元素节点， 一个namespace对应一个repo -->
<mapper namespace="com.hnu.repository.SuppdemaRepository">
    
    <insert id="insetSuppdema" parameterType="com.hnu.entity.Suppdema" useGeneratedKeys="true" keyProperty="id">

        insert into medical_resources_demand(s_lon,s_lat,s_nation,s_city,s_province,s_district,
        s_street,s_street_number,s_content,s_type,s_range,s_aging,s_subtime,store_name,u_id_id)
        values (
        #{sLon},#{sLat},#{sNation},#{sCity},#{sProvince},#{sDistrict},#{sStreet},#{sStreetNumber},#{sContent},#{sType},
        #{sRange},#{sAging},#{sSubtime},#{storeName},#{uIdId}
        )

    </insert>

    <select id="searchStores" resultType="com.hnu.entity.Suppdema">
        select * from medical_resources_demand where store_name like #{keyword} limit #{current_position},#{page_items_count}
    </select>

</mapper>